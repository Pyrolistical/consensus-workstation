{
  "name": "consensus-workstation",
  "private": true,
  "type": "module",
  "dependencies": {
    "@emotion/react": "11.4.1",
    "@emotion/styled": "11.3.0",
    "ramda": "0.27.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/ramda": "0.27.44",
    "esbuild": "0.12.25",
    "jest": "27.0.6",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.2"
  },
  "scripts": {
    "start": "esbuild index.jsx --serve --servedir=cdn-root --bundle --format=esm --outfile=cdn-root/bundle.js",
    "clean": "rimraf dist/",
    "prebuild": "npm run clean",
    "build": "esbuild index.jsx --bundle --format=esm --outfile=dist/bundle.js",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    }
  }
}
